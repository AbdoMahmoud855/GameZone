@using GameZone.Helper
@model IEnumerable< GamesViewModel>
@{
    ViewData["Title"]="Games";
}

<a class="btn btn-secondary" asp-action="Create">
    <i class="bi bi-plus-circle-dotted btn-lg"></i>
    Add Game</a>
@if (!Model.Any())
{
    <div class="alert  alert-warning justify-content-center m-lg-5 ">

        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0"> No Games Were Yet .</p>
    </div>
}
else
{
    <div class="row mt-5">

        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card border-success mb-3 text-decoration-none rounded-3 overflow-hidden" style="max-width:20rem;" asp-action="Detail" asp-route-Id="@item.Id">

                <div class="card-body" style="background-image:url(@($"{FileSetting.ImagesPath}/{item.ImageName}")); background-size:cover; background-position:center; height:400px ; ">
                    <div class="d-flex align-items-end h-100">
            
                   <span class="badge bg-secondary rounded-0 fs-3">@item.category?.Name</span>
               </div>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                <h5>@item.Name</h5>    
                <div>
                  @foreach(var device in item.Devices)
                            {
                                <i class="@device.Device.Icon  me-2 fs-4"></i>
                            }
                </div>

            </div>
                </a>
        </div>
        
        }

    </div>
   
}