@using GameZone.Helper
@model IEnumerable< GamesViewModel>
@{
    ViewData["Title"] = "Games";
}


@if (!Model.Any())
{
    <div class="alert  alert-warning justify-content-center m-lg-5 ">

        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0"> No Games Were Yet .</p>
    </div>
}
else
{
   <table class="table table-bordered border-primary">
       <tbody>
            @foreach (var item in Model)
            {
                
                <tr class="border-1 border-success">
                 
                    <td>
                        <a asp-action="Detail" asp-route-Id="@item.Id" class=" justify-content-center text-decoration-none text-muted">
                            <div class="d-flex ">
                            
                            <div class="pe-4">
                                <img src="@($"{FileSetting.ImagesPath}/{item.ImageName}")" style=" height: 123px;" alt="@item.Name" width="145 px" height="165px" />
                            </div>

                                <div class="d-flex flex-column justify-content-center">
                                <h4 class=" text-light"> @item.Name</h4>
                                <h4> @item.category?.Name</h4>
                            </div>
                        </div>
                        </a>
                    </td>
                   
                    <td class=" align-middle">
                        <div class="d-flex justify-content-end">
                            <a asp-action="Edite"asp-controller="Games"  asp-route-Id="@item.Id" class="btn btn-info rounded rounded-3 me-2">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a  data-id="@item.Id" class="btn btn-danger rounded rounded-3 js-delete ">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
               





            }



       </tbody>

   </table>

        

   

}
@section Scripts{
    <script src="~/js/gamesdelete.js"></script>
}